@model PagedList.IPagedList<WebBHDTCHUNG.Models.Config_MASP>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

                <div class="btn-right">
                    <a href="/admin/config_masp/create" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới mã</a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên Mã SP</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.CfMaSP</td>
                                        <td>
                                            @if (User.IsInRole("Partner"))
                                            {

                                                <a class="btn" href="/admin/config_masp/delete/@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, currentFilter = ViewBag.currentFilter }))
                        <p class="pageof">page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
